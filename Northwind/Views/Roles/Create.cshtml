@{
    ViewData["Title"] = "Create Role";
}
<section class="mx-auto max-w-4xl rounded-md bg-white p-6 shadow-md">
    <h2 class="text-lg font-semibold capitalize text-gray-700">Role Management</h2>

    <form>
        <div class="grid-cols-1 mt-4 grid gap-6 sm:grid-cols-2">
            <div>
                <label class="text-gray-700" for="username">Role Name</label>
                <input id="username" type="text" class="mt-2 block w-full rounded-md border border-gray-200 bg-white px-4 py-2 text-gray-700 focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring">
            </div>
        </div>

        <div class="mt-6 flex justify-end">
            <button class="leading-5 transform rounded-md bg-gray-700 px-8 py-2.5 text-white transition-colors duration-300 hover:bg-gray-600 focus:outline-none focus:bg-gray-600">Save</button>
        </div>
    </form>
</section>