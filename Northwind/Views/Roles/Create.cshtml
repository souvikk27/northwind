@{
	ViewData["Title"] = "Create Role";
	if (TempData["SuccessMessage"] != null)
	{
		<div id="success-notification" class="fixed top-4 right-4 flex w-full max-w-sm overflow-hidden bg-white rounded-lg shadow-md transition-opacity duration-500">
			<div class="flex items-center justify-center w-12 bg-emerald-500">
				<svg class="w-6 h-6 text-white fill-current" viewBox="0 0 40 40" xmlns="http://www.w3.org/2000/svg">
					<path d="M20 3.33331C10.8 3.33331 3.33337 10.8 3.33337 20C3.33337 29.2 10.8 36.6666 20 36.6666C29.2 36.6666 36.6667 29.2 36.6667 20C36.6667 10.8 29.2 3.33331 20 3.33331ZM16.6667 28.3333L8.33337 20L10.6834 17.65L16.6667 23.6166L29.3167 10.9666L31.6667 13.3333L16.6667 28.3333Z" />
				</svg>
			</div>

			<div class="px-4 py-2 -mx-3">
				<div class="mx-3">
					<span class="font-semibold text-emerald-500">Success</span>
					<p class="text-sm text-gray-600">@TempData["SuccessMessage"]</p>
				</div>
			</div>
		</div>

		<script>
			setTimeout(function () {
				var notification = document.getElementById('success-notification');
				notification.classList.add('opacity-0');
				setTimeout(function () {
					notification.style.display = 'none';
				}, 500);
			}, 1500);
		</script>
	}
}
<section class="mx-auto max-w-4xl rounded-md bg-white p-6 shadow-md">
	<h2 class="text-lg font-semibold capitalize text-gray-700">Role Management</h2>

	<form asp-action="Create" asp-controller="Roles" method="post">
		<div class="grid-cols-1 mt-4 grid gap-6 sm:grid-cols-2">
			<div>
				<label class="text-gray-700" for="rolename">Role Name</label>
				<input id="rolename" name="rolename" class="mt-2 block w-full rounded-md border border-gray-200 bg-white px-4 py-2 text-gray-700 focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring">
			</div>
		</div>

		<div class="mt-6 flex justify-end items-center gap-4">
			<button type="submit" class="leading-5 transform rounded-md bg-gray-700 px-8 py-2.5 text-white transition-colors duration-300 hover:bg-gray-600 focus:outline-none focus:bg-gray-600">Save</button>
		</div>
	</form>
	<div class="mt-4">
		<a asp-action="Index" asp-controller="Roles" class="text-indigo-600 hover:text-indigo-800 transition-colors duration-300">&larr; Back to List</a>
	</div>
</section>