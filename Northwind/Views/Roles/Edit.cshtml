@model Microsoft.AspNetCore.Identity.IdentityRole
@{
    ViewData["Title"] = "Edit Role";
}
<partial name="_SuccessNotification" />
<partial name="_ErrorNotification" />

<section class="mx-auto max-w-4xl rounded-md bg-white p-6 shadow-md">
    <h2 class="text-lg font-semibold capitalize text-gray-700">Edit Role</h2>

    <form asp-action="Edit" asp-controller="Roles" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="grid-cols-1 mt-4 grid gap-6 sm:grid-cols-2">
            <div>
                <label asp-for="Name" class="text-gray-700">Role Name</label>
                <input asp-for="Name" class="mt-2 block w-full rounded-md border border-gray-200 bg-white px-4 py-2 text-gray-700 focus:border-blue-400 focus:ring-blue-300 focus:ring-opacity-40 focus:outline-none focus:ring">
                <span asp-validation-for="Name" class="text-red-500"></span>
            </div>
        </div>

        <div class="mt-6 flex items-center justify-end gap-4">
            <button type="submit" class="leading-5 transform rounded-md bg-gray-700 px-8 py-2.5 text-white transition-colors duration-300 hover:bg-gray-600 focus:outline-none focus:bg-gray-600">Save</button>
        </div>
    </form>
    <div class="mt-4">
        <a asp-action="Index" asp-controller="Roles" class="text-indigo-600 transition-colors duration-300 hover:text-indigo-800">&larr; Back to List</a>
    </div>
</section>