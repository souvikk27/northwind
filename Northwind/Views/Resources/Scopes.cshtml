@model IEnumerable<Northwind.ViewModels.ControllerVm>
@{
    ViewData["Title"] = "Scopes";
}

<section class="container mx-auto px-4 py-8">
    <div class="flex items-center justify-between mb-6">
        <div class="flex items-center gap-x-3">
            <h2 class="text-2xl font-bold text-gray-800">Scopes</h2>
            <span class="rounded-full bg-blue-100 px-3 py-1 text-sm font-medium text-blue-600">@Model.Count() scopes</span>
        </div>
        <button type="submit" form="scopesForm" class="bg-gradient-to-r from-blue-500 to-blue-700 hover:from-blue-600 hover:to-blue-800 text-white font-semibold px-6 py-2 rounded-lg transition duration-300 ease-in-out transform hover:scale-105 shadow-lg">
            Save Changes
        </button>
    </div>

    <form id="scopesForm" method="post" asp-action="SaveRolePermissions" asp-controller="Resources" class="space-y-6">
        @foreach (var controller in Model)
        {
            <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition duration-300 ease-in-out transform hover:scale-105">
                <h3 class="text-xl font-semibold text-gray-800 mb-4">@controller.Name</h3>
                <input type="hidden" name="permissions[@controller.RoleId].RoleId" value="@controller.RoleId" />
                <ul class="space-y-3">
                    @foreach (var action in controller.ActionMethods)
                    {
                        <li>
                            <label class="flex items-center space-x-3 cursor-pointer">
                                <input type="hidden" name="permissions[@controller.RoleId].ControllerName" value="@controller.Name" />
                                <input type="hidden" name="permissions[@controller.RoleId].ActionMethodName" value="@action.ActionMethodName" />
                                <input type="checkbox" name="permissions[@controller.RoleId].IsAllowed" value="true" @(action.IsAllowed ? "checked" : "") class="form-checkbox h-5 w-5 text-blue-600 rounded focus:ring-blue-500">
                                <input type="hidden" name="permissions[@controller.RoleId].IsAllowed" value="false" />
                                <span class="text-gray-700 font-medium">@action.ActionMethodName</span>
                            </label>
                        </li>
                    }
                </ul>
            </div>
        }
    </form>
</section>
