@model Northwind.ViewModels.SettingsViewModel
@{
    ViewData["Title"] = "Settings";
    Layout = "Layouts/_LayoutsDash";
}

<div class="ml-[250px] p-6">
    <!-- Header Section -->
    <div class="mb-6">
        <h1 class="text-2xl font-bold text-gray-800">Settings</h1>
        <p class="text-gray-600">Manage your application settings and preferences</p>
    </div>

    <div class="grid grid-cols-12 gap-6">
        <!-- Settings Navigation -->
        <div class="col-span-12 lg:col-span-3">
            <div class="overflow-hidden rounded-lg bg-white shadow-sm">
                <div class="border-b border-gray-200 p-4">
                    <h2 class="text-lg font-medium text-gray-800">Settings</h2>
                </div>
                <nav class="flex flex-col p-2">
                    <a href="#company" class="flex items-center rounded-md px-3 py-2 text-sm font-medium text-indigo-600 hover:bg-indigo-50">
                        <svg xmlns="http://www.w3.org/2000/svg" class="mr-3 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                        </svg>
                        Company Information
                    </a>
                    <a href="#regional" class="flex items-center rounded-md px-3 py-2 text-sm font-medium text-gray-600 hover:bg-gray-100">
                        <svg xmlns="http://www.w3.org/2000/svg" class="mr-3 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        Regional Settings
                    </a>
                    <a href="#appearance" class="flex items-center rounded-md px-3 py-2 text-sm font-medium text-gray-600 hover:bg-gray-100">
                        <svg xmlns="http://www.w3.org/2000/svg" class="mr-3 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
                        </svg>
                        Appearance
                    </a>
                    <a href="#notifications" class="flex items-center rounded-md px-3 py-2 text-sm font-medium text-gray-600 hover:bg-gray-100">
                        <svg xmlns="http://www.w3.org/2000/svg" class="mr-3 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
                        </svg>
                        Notifications
                    </a>
                    <a href="#security" class="flex items-center rounded-md px-3 py-2 text-sm font-medium text-gray-600 hover:bg-gray-100">
                        <svg xmlns="http://www.w3.org/2000/svg" class="mr-3 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                        </svg>
                        Security
                    </a>
                    <a href="#backup" class="flex items-center rounded-md px-3 py-2 text-sm font-medium text-gray-600 hover:bg-gray-100">
                        <svg xmlns="http://www.w3.org/2000/svg" class="mr-3 h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7v8a2 2 0 002 2h6M8 7V5a2 2 0 012-2h4.586a1 1 0 01.707.293l4.414 4.414a1 1 0 01.293.707V15a2 2 0 01-2 2h-2M8 7H6a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2v-2" />
                        </svg>
                        Backup & Recovery
                    </a>
                </nav>
            </div>
        </div>

        <!-- Settings Content -->
        <div class="col-span-12 space-y-6 lg:col-span-9">
            <!-- Company Information -->
            <div id="company" class="overflow-hidden rounded-lg bg-white shadow-sm">
                <div class="border-b border-gray-200 px-6 py-4">
                    <h2 class="text-lg font-medium text-gray-800">Company Information</h2>
                    <p class="text-sm text-gray-600">Update your company details and contact information</p>
                </div>
                <div class="p-6">
                    <form>
                        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
                            <div>
                                <label for="company_name" class="block text-sm font-medium text-gray-700">Company Name</label>
                                <input type="text" id="company_name" name="company_name" value="@Model.CompanyName" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
                            </div>
                            <div>
                                <label for="company_email" class="block text-sm font-medium text-gray-700">Email Address</label>
                                <input type="email" id="company_email" name="company_email" value="@Model.CompanyEmail" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
                            </div>
                            <div>
                                <label for="company_phone" class="block text-sm font-medium text-gray-700">Phone Number</label>
                                <input type="text" id="company_phone" name="company_phone" value="@Model.CompanyPhone" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
                            </div>
                            <div>
                                <label for="company_address" class="block text-sm font-medium text-gray-700">Address</label>
                                <input type="text" id="company_address" name="company_address" value="@Model.CompanyAddress" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
                            </div>
                        </div>
                        <div class="mt-6 flex justify-end">
                            <button type="submit" class="inline-flex items-center rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                                Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Regional Settings -->
            <div id="regional" class="overflow-hidden rounded-lg bg-white shadow-sm">
                <div class="border-b border-gray-200 px-6 py-4">
                    <h2 class="text-lg font-medium text-gray-800">Regional Settings</h2>
                    <p class="text-sm text-gray-600">Configure your regional preferences</p>
                </div>
                <div class="p-6">
                    <form>
                        <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
                            <div>
                                <label for="currency" class="block text-sm font-medium text-gray-700">Currency</label>
                                <select id="currency" name="currency" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
                                    <option value="USD" selected="@(Model.Currency == "USD")">USD</option>
                                    <option value="EUR" selected="@(Model.Currency == "EUR")">EUR</option>
                                    <option value="GBP" selected="@(Model.Currency == "GBP")">GBP</option>
                                    <option value="JPY" selected="@(Model.Currency == "JPY")">JPY</option>
                                    <option value="CAD" selected="@(Model.Currency == "CAD")">CAD</option>
                                </select>
                            </div>
                            <div>
                                <label for="date_format" class="block text-sm font-medium text-gray-700">Date Format</label>
                                <select id="date_format" name="date_format" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
                                    <option value="MM/dd/yyyy" selected="@(Model.DateFormat == "MM/dd/yyyy")">MM/dd/yyyy</option>
                                    <option value="dd/MM/yyyy" selected="@(Model.DateFormat == "dd/MM/yyyy")">dd/MM/yyyy</option>
                                    <option value="yyyy-MM-dd" selected="@(Model.DateFormat == "yyyy-MM-dd")">yyyy-MM-dd</option>
                                </select>
                            </div>
                            <div>
                                <label for="timezone" class="block text-sm font-medium text-gray-700">Time Zone</label>
                                <select id="timezone" name="timezone" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
                                    <option value="Pacific Standard Time" selected="@(Model.TimeZone == "Pacific Standard Time")">Pacific Standard Time</option>
                                    <option value="Eastern Standard Time" selected="@(Model.TimeZone == "Eastern Standard Time")">Eastern Standard Time</option>
                                    <option value="Central European Time" selected="@(Model.TimeZone == "Central European Time")">Central European Time</option>
                                    <option value="Japan Standard Time" selected="@(Model.TimeZone == "Japan Standard Time")">Japan Standard Time</option>
                                </select>
                            </div>
                            <div>
                                <label for="language" class="block text-sm font-medium text-gray-700">Language</label>
                                <select id="language" name="language" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
                                    <option value="English" selected="@(Model.Language == "English")">English</option>
                                    <option value="Spanish" selected="@(Model.Language == "Spanish")">Spanish</option>
                                    <option value="French" selected="@(Model.Language == "French")">French</option>
                                    <option value="German" selected="@(Model.Language == "German")">German</option>
                                    <option value="Japanese" selected="@(Model.Language == "Japanese")">Japanese</option>
                                </select>
                            </div>
                        </div>
                        <div class="mt-6 flex justify-end">
                            <button type="submit" class="inline-flex items-center rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                                Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Appearance -->
            <div id="appearance" class="overflow-hidden rounded-lg bg-white shadow-sm">
                <div class="border-b border-gray-200 px-6 py-4">
                    <h2 class="text-lg font-medium text-gray-800">Appearance</h2>
                    <p class="text-sm text-gray-600">Customize the look and feel of the application</p>
                </div>
                <div class="p-6">
                    <form>
                        <div class="space-y-4">
                            <div>
                                <label class="text-sm font-medium text-gray-700">Theme</label>
                                <div class="mt-2 grid grid-cols-3 gap-4">
                                    <div class="relative">
                                        <input type="radio" id="theme_light" name="theme" value="Light" class="peer sr-only" @(Model.Theme == "Light" ? "checked" : "")>
                                        <label for="theme_light" class="flex cursor-pointer flex-col items-center rounded-lg border border-gray-200 p-4 peer-checked:border-indigo-500 peer-checked:ring-2 peer-checked:ring-indigo-500">
                                            <div class="mb-2 h-12 w-12 rounded-md bg-white shadow-sm"></div>
                                            <span class="text-sm font-medium">Light</span>
                                        </label>
                                    </div>
                                    <div class="relative">
                                        <input type="radio" id="theme_dark" name="theme" value="Dark" class="peer sr-only" @(Model.Theme == "Dark" ? "checked" : "")>
                                        <label for="theme_dark" class="flex cursor-pointer flex-col items-center rounded-lg border border-gray-200 p-4 peer-checked:border-indigo-500 peer-checked:ring-2 peer-checked:ring-indigo-500">
                                            <div class="mb-2 h-12 w-12 rounded-md bg-gray-800 shadow-sm"></div>
                                            <span class="text-sm font-medium">Dark</span>
                                        </label>
                                    </div>
                                    <div class="relative">
                                        <input type="radio" id="theme_system" name="theme" value="System" class="peer sr-only" @(Model.Theme == "System" ? "checked" : "")>
                                        <label for="theme_system" class="flex cursor-pointer flex-col items-center rounded-lg border border-gray-200 p-4 peer-checked:border-indigo-500 peer-checked:ring-2 peer-checked:ring-indigo-500">
                                            <div class="mb-2 h-12 w-12 rounded-md bg-gradient-to-r from-white to-gray-800 shadow-sm"></div>
                                            <span class="text-sm font-medium">System</span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="mt-6 flex justify-end">
                            <button type="submit" class="inline-flex items-center rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                                Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Notifications -->
            <div id="notifications" class="overflow-hidden rounded-lg bg-white shadow-sm">
                <div class="border-b border-gray-200 px-6 py-4">
                    <h2 class="text-lg font-medium text-gray-800">Notifications</h2>
                    <p class="text-sm text-gray-600">Configure how you receive notifications</p>
                </div>
                <div class="p-6">
                    <form>
                        <div class="space-y-4">
                            <div class="flex items-center justify-between">
                                <div>
                                    <h3 class="text-sm font-medium text-gray-700">Enable Notifications</h3>
                                    <p class="text-sm text-gray-500">Receive notifications about important events</p>
                                </div>
                                <div class="relative inline-flex items-center">
                                    <input type="checkbox" id="notifications_enabled" name="notifications_enabled" class="peer sr-only" @(Model.NotificationsEnabled ? "checked" : "")>
                                    <div class="h-6 w-11 rounded-full bg-gray-200 peer-checked:bg-indigo-600"></div>
                                    <div class="absolute left-0.5 top-0.5 h-5 w-5 rounded-full bg-white transition-all peer-checked:left-5.5"></div>
                                </div>
                            </div>
                            <div class="flex items-center justify-between">
                                <div>
                                    <h3 class="text-sm font-medium text-gray-700">Email Notifications</h3>
                                    <p class="text-sm text-gray-500">Receive notifications via email</p>
                                </div>
                                <div class="relative inline-flex items-center">
                                    <input type="checkbox" id="email_notifications" name="email_notifications" class="peer sr-only" @(Model.EmailNotifications ? "checked" : "")>
                                    <div class="h-6 w-11 rounded-full bg-gray-200 peer-checked:bg-indigo-600"></div>
                                    <div class="absolute left-0.5 top-0.5 h-5 w-5 rounded-full bg-white transition-all peer-checked:left-5.5"></div>
                                </div>
                            </div>
                            <div class="flex items-center justify-between">
                                <div>
                                    <h3 class="text-sm font-medium text-gray-700">Push Notifications</h3>
                                    <p class="text-sm text-gray-500">Receive push notifications in your browser</p>
                                </div>
                                <div class="relative inline-flex items-center">
                                    <input type="checkbox" id="push_notifications" name="push_notifications" class="peer sr-only" @(Model.PushNotifications ? "checked" : "")>
                                    <div class="h-6 w-11 rounded-full bg-gray-200 peer-checked:bg-indigo-600"></div>
                                    <div class="absolute left-0.5 top-0.5 h-5 w-5 rounded-full bg-white transition-all peer-checked:left-5.5"></div>
                                </div>
                            </div>
                        </div>
                        <div class="mt-6 flex justify-end">
                            <button type="submit" class="inline-flex items-center rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                                Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Security -->
            <div id="security" class="overflow-hidden rounded-lg bg-white shadow-sm">
                <div class="border-b border-gray-200 px-6 py-4">
                    <h2 class="text-lg font-medium text-gray-800">Security</h2>
                    <p class="text-sm text-gray-600">Manage your security settings</p>
                </div>
                <div class="p-6">
                    <form>
                        <div class="space-y-4">
                            <div class="flex items-center justify-between">
                                <div>
                                    <h3 class="text-sm font-medium text-gray-700">Two-Factor Authentication</h3>
                                    <p class="text-sm text-gray-500">Add an extra layer of security to your account</p>
                                </div>
                                <div class="relative inline-flex items-center">
                                    <input type="checkbox" id="two_factor_auth" name="two_factor_auth" class="peer sr-only" @(Model.TwoFactorAuth ? "checked" : "")>
                                    <div class="h-6 w-11 rounded-full bg-gray-200 peer-checked:bg-indigo-600"></div>
                                    <div class="absolute left-0.5 top-0.5 h-5 w-5 rounded-full bg-white transition-all peer-checked:left-5.5"></div>
                                </div>
                            </div>
                            <div class="pt-4">
                                <button type="button" class="inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="mr-2 h-5 w-5 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
                                    </svg>
                                    Change Password
                                </button>
                            </div>
                        </div>
                        <div class="mt-6 flex justify-end">
                            <button type="submit" class="inline-flex items-center rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                                Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Backup & Recovery -->
            <div id="backup" class="overflow-hidden rounded-lg bg-white shadow-sm">
                <div class="border-b border-gray-200 px-6 py-4">
                    <h2 class="text-lg font-medium text-gray-800">Backup & Recovery</h2>
                    <p class="text-sm text-gray-600">Configure backup settings for your data</p>
                </div>
                <div class="p-6">
                    <form>
                        <div class="space-y-4">
                            <div class="flex items-center justify-between">
                                <div>
                                    <h3 class="text-sm font-medium text-gray-700">Automatic Backups</h3>
                                    <p class="text-sm text-gray-500">Automatically backup your data</p>
                                </div>
                                <div class="relative inline-flex items-center">
                                    <input type="checkbox" id="automatic_backups" name="automatic_backups" class="peer sr-only" @(Model.AutomaticBackups ? "checked" : "")>
                                    <div class="h-6 w-11 rounded-full bg-gray-200 peer-checked:bg-indigo-600"></div>
                                    <div class="absolute left-0.5 top-0.5 h-5 w-5 rounded-full bg-white transition-all peer-checked:left-5.5"></div>
                                </div>
                            </div>
                            <div>
                                <label for="backup_frequency" class="block text-sm font-medium text-gray-700">Backup Frequency</label>
                                <select id="backup_frequency" name="backup_frequency" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
                                    <option value="Daily" selected="@(Model.BackupFrequency == "Daily")">Daily</option>
                                    <option value="Weekly" selected="@(Model.BackupFrequency == "Weekly")">Weekly</option>
                                    <option value="Monthly" selected="@(Model.BackupFrequency == "Monthly")">Monthly</option>
                                </select>
                            </div>
                            <div class="pt-4">
                                <button type="button" class="inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="mr-2 h-5 w-5 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12" />
                                    </svg>
                                    Backup Now
                                </button>
                            </div>
                        </div>
                        <div class="mt-6 flex justify-end">
                            <button type="submit" class="inline-flex items-center rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                                Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
